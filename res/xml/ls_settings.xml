<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/discovery_misc_settings"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<SwitchPreference
	    android:key="fp_unlock_keystore"
	    android:title="@string/fp_unlock_keystore_title"
	    android:summary="@string/fp_unlock_keystore_summary"
	    android:persistent="false" />

	<SwitchPreference
	    android:key="double_tap_sleep_lock_screen"
	    android:title="@string/double_tap_sleep_lock_screen_title"
	    android:summary="@string/double_tap_sleep_lock_screen_summary"
	    android:persistent="false" />

  <SwitchPreference
      android:key="quick_unlock_control"
      android:title="@string/unlock_quick_unlock_control_title"
      android:summary="@string/unlock_quick_unlock_control_summary"
      android:persistent="false"/>

  <SwitchPreference
      android:key="power_menu_disabled"
      android:title="@string/power_menu_disabled_title"
      android:summary="@string/power_menu_disabled_summary"
      android:persistent="false"/>

  <com.discovery.settings.preferences.SystemSettingSwitchPreference
      android:key="lockscreen_media_metadata"
      android:title="@string/media_art_title"
      android:summary="@string/media_art_summary"
      android:defaultValue="true" />

  <com.discovery.settings.preferences.SystemSettingSwitchPreference
      android:key="lock_screen_custom_notif"
      android:title="@string/lockscreen_maxnotif_title"
      android:summary="@string/lockscreen_maxnotif_sumary"
      android:defaultValue="false" />

  <com.android.settings.SeekBarPreference
      android:key="lockscreen_max_notif_cofig"
      android:title="@string/lockscreen_maxnotif_config"
      android:max="8"
      settings:minimum="3"
      settings:unitsLeft=""
      settings:unitsRight=""
      android:persistent="false"
      android:dependency="lock_screen_custom_notif" />

</PreferenceScreen>
